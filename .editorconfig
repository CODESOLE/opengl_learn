root = true

[*]
charset = utf-8

[*.{c,cc,cpp,h,hh,hpp,inl,glsl}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cmake,txt}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.sh]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[.travis.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[meson.build]
indent_style = space
indent_size = 2
